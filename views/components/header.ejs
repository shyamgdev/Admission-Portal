<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admission Portal: Dashboard</title>
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/img/favicons/apple-touch-icon.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/img/favicons/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/img/favicons/favicon-16x16.png"
    />
    <link rel="manifest" href="/manifest.json" />
    <link rel="stylesheet" href="/css/output.css" />
    <link rel="stylesheet" href="/css/customStyle.css" />
  </head>

  <body class="flex flex-col">
    <%- include('./notifier.ejs') %>
    <!-- HEADER -->
    <header class="sticky top-0 w-full h-fit bg-primary shadow-2xl z-10">
      <!-- HEADER CONTAINER -->
      <div
        class="w-full h-full px-4 py-2 flex flex-row flex-wrap items-center justify-between"
      >
        <!-- HEADER LEFT -->
        <div class="h-12 cursor-pointer overflow-hidden" title="Logo">
          <!-- LOGO -->
          <a href="/dashboard">
            <img src="/img/logo.png" alt="Collage Logo" />
          </a>
        </div>
        <!-- HEADER CENTER -->
        <div
          class="hidden w-full h-fit mt-2 font-medium order-3 lg:block lg:w-fit lg:mt-0 lg:order-2"
          id="toggle-mobile-menu"
        >
          <nav class="w-full h-full">
            <ul
              class="w-full h-full flex flex-col md:flex-row md:gap-4 items-center"
            >
              <a
                href="/dashboard"
                class="w-full p-2 border-b border-gray-100 bg-blue-700 hover:bg-blue-800 cursor-pointer md:w-fit md:px-4 md:border-0 md:text-blue-700 md:bg-transparent md:hover:bg-transparent text-white rounded"
                onclick="toggleMobileMenuBtn()"
              >
                <li>Home</li>
              </a>
              <a
                class="p-2 text-gray-700 hover:text-blue-700 hover:bg-gray-50 md:hover:bg-transparent cursor-pointer w-full border-b border-gray-100 rounded md:w-fit md:px-4 md:border-0"
                href="/dashboard#courses"
                onclick="toggleMobileMenuBtn()"
              >
                <li>Courses</li>
              </a>
              <a
                class="p-2 text-gray-700 hover:text-blue-700 hover:bg-gray-50 md:hover:bg-transparent cursor-pointer w-full border-b border-gray-100 rounded md:w-fit md:px-4 md:border-0"
                href="/dashboard#about"
                onclick="toggleMobileMenuBtn()"
              >
                <li>About Us</li>
              </a>
              <a
                class="p-2 text-gray-700 hover:text-blue-700 hover:bg-gray-50 md:hover:bg-transparent cursor-pointer w-full border-b border-gray-100 rounded md:w-fit md:px-4 md:border-0"
                href="/dashboard#contact"
                onclick="toggleMobileMenuBtn()"
              >
                <li>Contact Us</li>
              </a>
              <a
                class="p-2 text-gray-700 hover:text-blue-700 hover:bg-gray-50 md:hover:bg-transparent cursor-pointer w-full border-b border-gray-100 rounded md:w-fit md:px-4 md:border-0"
                href="/"
              >
                <li>Logout</li>
              </a>
            </ul>
          </nav>
        </div>
        <!-- HEADER RIGHT -->
        <div
          class="w-fit h-12 flex flex-row items-center justify-center gap-4 order-2 md:order-3"
        >
          <!-- USER NAME -->
          <a href="/profile" class="cursor-pointer truncate" title="<%= n %>">
            <h3 class="whitespace-nowrap font-bold text-blue-700"><%= n %></h3>
          </a>

          <!-- USER PROFILE IMAGE -->
          <a
            href="/profile"
            class="h-full rounded-full ring-2 p-1 overflow-hidden cursor-pointer"
            title="<%= n %>"
          >
            <img
              class="rounded-full aspect-square"
              src="<%= img.url %>"
              alt="profile"
            />
          </a>
          <!-- TOGGLE BUTTON FOR MOBILE TO TOGGLE NAV LINKS -->
          <div
            class="humburger cursor-pointer md:hidden"
            onclick="toggleMobileMenuBtn()"
            title="Menu"
          >
            <!-- ICON TO OPEN MENU -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-6 h-6 open"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
              />
            </svg>
            <!-- ICON TO CLOSE MENU -->
            <svg
              xmlns="http://www.w3.org/2000/svg"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              class="w-6 h-6 hidden close"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M6 18L18 6M6 6l12 12"
              />
            </svg>
          </div>
        </div>
      </div>
    </header>
